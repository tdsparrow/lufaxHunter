{
  "manifest_version": 2,

  "name": "LufaxHunter",
  "description": "Hunter for Lufax bidding",
  "version": "0.1",

  "permissions": [
    "tabs",
    "http://list.lufax.com/*"
  ],

  "background": {
    "page": "background.html"
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Lufax Hunter"
  },
  "content_scripts": [
    {
      "matches": ["http://list.lufax.com/*"],
      "js": ["myscript.js"]
    }
  ]
}
